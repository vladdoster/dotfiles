{
  "repositoryUrl": "https://github.com/vladdoster/dotfiles",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "bugfix",   "release": "patch" },
          { "type": "build",    "release": "patch" },
          { "type": "chore",    "release": "patch" },
          { "type": "ci",       "release": "patch" },
          { "type": "docs",     "release": "patch" },
          { "type": "maint",    "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "release",  "release": "minor" },
          { "type": "style",    "release": "patch" }
        ]
      }
    ],
    "@semantic-release/commit-analyzer",
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["./.cz.toml"],
            "from": "version = '([0-9]).+([0-9]).+([0-9])'",
            "to": "version = '${nextRelease.version}'",
            "results": [
              {
                "file": "./.cz.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["VERSION"],
            "from": "^([0-9]).+([0-9]).+([0-9])$",
            "to": "${nextRelease.version}",
            "results": [
              {
                "file": "VERSION",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [".cz.toml", "CHANGELOG.md", "VERSION"],
        "message": "(release): bump ${lastRelease.version} â†’ ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
