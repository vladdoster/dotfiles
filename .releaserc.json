{
  "repositoryUrl": "https://github.com/vladdoster/dotfiles",
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "eslint",
      "releaseRules": [
        {"tag": "build",  "release": "patch"},
        {"tag": "chore",  "release": "patch"},
        {"tag": "docs",   "release": "patch"},
        {"tag": "fix",    "release": "patch"},
        {"tag": "new",    "release": "minor"},
        {"tag": "update", "release": "minor"}
      ]
    }],
    ["@google/semantic-release-replace-plugin", {
        "replacements": [
          {
            "files": ["VERSION"],
            "from": "^([0-9]).+([0-9]).+([0-9])$",
            "to": "${nextRelease.version}",
            "results": [ { "file": "VERSION", "hasChanged": true }
            ]
          }
        ]
      }
    ],
    ["@semantic-release/release-notes-generator", { "preset": "eslint" }],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" } ],
    ["@semantic-release/git", {
        "assets": ["CHANGELOG.md", "VERSION"],
        "message": "release: v${lastRelease.version} â†’ v${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
