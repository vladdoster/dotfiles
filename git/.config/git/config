[init]
  defaultBranch = "master"

[advice]
  skippedCherryPicks = false

[user]
  email    = "mvdoster@gmail.com"
  name     = "Vladislav Doster"
  username = "vladdoster"

[credential]
  helper = cache --timeout=86400

[core]
  editor = nvim
  eol = lf
  excludesfile = ~/.config/git/ignore
  pager = delta
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
  ui = true

[diff]
  colorMoved = default
  tool = delta

[merge]
  conflictstyle = diff3

[commit]
  template = ~/.config/git/commit-template

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[rerere]
  enabled = 1
  autoupdate = 1

[interactive]
  diffFilter = "delta --color-only --features=interactive"

[delta]
  features = "line-numbers decorations"
  commit-decoration-style = "blue ol"
  commit-style = "raw"
  file-style = "omit"
  hunk-header-decoration-style = "blue box"
  hunk-header-file-style = "red"
  hunk-header-style = "file line-number syntax"
  line-numbers = true
  navigate = true
  keep-plus-minus-markers = false
  hunk-header-line-number-style = "#067a00"

[homebrew]
  analyticsmessage = false
  caskanalyticsmessage = false

[http]
  sslVerify = false

[https]
  sslVerify = false

[github]
  user = "vladdoster"

[alias]
  au = add -u
  b   = branch
  bc  = rev-parse --abbrev-ref HEAD
  bu  = !git rev-parse --abbrev-ref --symbolic-full-name "@{u}"
  o   = checkout
  om  = checkout master
  ob  = checkout -b
  opr = !sh -c 'git fo pull/$1/head:pr-$1 && git o pr-$1'
  cl   = clone
  clg  = !sh -c 'git clone https://github.com/$1' -
  clgp = !sh -c 'git clone git@github.com:$1 $(basename $1)' -
  clgu = !sh -c 'git clone https://github.com/$(git config --get user.username)/$1 $1' -
  c   = commit --signoff
  cm  = commit --message
  cem = commit --allow-empty -m
  cd  = commit --amend
  cdne = 'commit --amend --no-edit'
  d = diff
  ds = diff --staged
  pl = pull
  ps  = push
  psf = push --force
  psfo = push -f origin
  rv = remote --verbose
  ru = restore
  rs = restore --staged
  sa  = stash apply
  sc  = stash clear
  sd  = stash drop
  sl  = stash list
  sp  = stash pop
  ss  = stash save
  ssk = stash save -k
  sw  = stash show
  st  = !git stash list | wc -l 2>/dev/null | grep -oEi '[0-9][0-9]*'
  s  = status
  sb = status -s -b
  co = checkout
  cob = checkout -b
  subadd  = !sh -c 'git submodule add git://github.com/$1 $2/$(basename $1)' -
  subpull = !git submodule foreach git pull --tags origin master
  subrm   = !sh -c 'git submodule deinit -f -- $1 && rm -rf .git/modules/$1 && git rm -f $1' -
  subup   = submodule update --init --recursive
