[init]
  defaultBranch = main
[advice]
    skippedCherryPicks = false
[user]
    email    = "mvdoster@gmail.com"
    name     = "Vladislav Doster"
    username = "vladdoster"
[credential]
    helper   = cache --timeout=86400
[core]
	autocrlf = false
    editor       = nvim
	eol = lf
    excludesfile = ~/.config/git/ignore
    pager        = delta
    whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[url "github.com"]
    insteadOf=vdoster.com
[url "https://github.com/vladdoster"]
  insteadOf = https://vdoster
[color]
    ui            = auto
[diff]
    colorMoved    = default
    tool          = delta
[merge]
    conflictstyle = diff3
[commit]
    template   = ~/.config/git/commit-template
[pull]
    rebase     = true
[push]
    default    = current
    followTags = true
[rerere]
    enabled    = 1
    autoupdate = 1
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
  features = line-numbers decorations
  line-numbers = true
  navigate = true
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-decoration-style       = blue ol
  commit-style                  = raw
  file-style                    = omit
  hunk-header-decoration-style  = blue box
  hunk-header-file-style        = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style             = file line-number syntax
[homebrew]
	analyticsmessage = false
	caskanalyticsmessage = false
[http]
  sslVerify = false
[https]
  sslVerify = false
[github]
  user = vladdoster
[remote "origin"]
	gh-resolved = base
[gitflow "prefix"]
  versiontag = v
[alias]
  aliases   = !git config -l | grep alias | cut -c 7-
  bump      = !sh -c 'git commit -am \"Version bump v$1\" && git psuoc && git release $1' -
  merged    = !sh -c 'git o master && git plom && git bd $1 && git rpo' -
  a  = add --all
  ai = add -i
  au = add -u
  b   = branch
  ba  = branch -a
  bc  = rev-parse --abbrev-ref HEAD
  bd  = branch -d
  bdd = branch -D
  br  = branch -r
  bs  = !git-branch-status
  bu  = !git rev-parse --abbrev-ref --symbolic-full-name "@{u}"
  o   = checkout
  om  = checkout master
  ob  = checkout -b
  opr = !sh -c 'git fo pull/$1/head:pr-$1 && git o pr-$1'
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  cl   = clone
  cld  = clone --depth 1
  clg  = !sh -c 'git clone https://github.com/$1' -
  clgp = !sh -c 'git clone git@github.com:$1 $(basename $1)' -
  clgu = !sh -c 'git clone https://github.com/$(git config --get user.username)/$1 $1' -
  c   = commit --signoff
  ca  = commit -a
  cm  = commit -m
  cam = commit -am
  cem = commit --allow-empty -m
  cd  = commit --amend
  cdne = commit --amend --no-edit
  cad = commit -a --amend
  ced = commit --allow-empty --amend
  d = diff
  ds = diff --staged
  f  = fetch
  fo = fetch origin
  fu = fetch upstream
  l  = log --oneline
  lg = log --oneline --graph --decorate
  ls  = ls-files
  lsf = !git ls-files | grep -i
  pl = pull
  pb = pull --rebase
  plo  = pull origin
  pbo  = pull --rebase origin
  plom = pull origin master
  ploc = !git pull origin $(git bc)
  pbom = pull --rebase origin master
  pboc = !git pull --rebase origin $(git bc)
  plu  = pull upstream
  plum = pull upstream master
  pluc = !git pull upstream $(git bc)
  pbum = pull --rebase upstream master
  pbuc = !git pull --rebase upstream $(git bc)
  ps  = push
  psf = push -f
  psu = push -u
  pst = push --tags
  psao = push --all origin
  psfo = push -f origin
  pso  = push origin
  psuo = push -u origin
  psom  = push origin master
  psaom = push --all origin master
  psfom = push -f origin master
  psuom = push -u origin master
  psoc  = !git push origin $(git bc)
  psaoc = !git push --all origin $(git bc)
  psfoc = !git push -f origin $(git bc)
  psuoc = !git push -u origin $(git bc)
  psdc  = !git push origin :$(git bc)
  rv = remote --verbose
  ru = restore
  rs = restore --staged
  sa  = stash apply
  sc  = stash clear
  sd  = stash drop
  sl  = stash list
  sp  = stash pop
  ss  = stash save
  ssk = stash save -k
  sw  = stash show
  st  = !git stash list | wc -l 2>/dev/null | grep -oEi '[0-9][0-9]*'
  s  = status
  sb = status -s -b
  co = checkout
  cob = checkout -b
  subadd  = !sh -c 'git submodule add git://github.com/$1 $2/$(basename $1)' -
  subpull = !git submodule foreach git pull --tags origin master
  subrm   = !sh -c 'git submodule deinit -f -- $1 && rm -rf .git/modules/$1 && git rm -f $1' -
  subup   = submodule update --init --recursive
  t  = tag
  td = tag -d
  release   = !sh -c 'git tag v$1 && git pst' -
  unrelease = !sh -c 'git tag -d v$1 && git pso :v$1' -
  w  = show
# vim:ft=toml:sw=2:sts=2

