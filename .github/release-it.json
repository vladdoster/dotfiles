{
  "git": {
    "changelog": "npx auto-changelog --stdout --commit-limit false --starting-version '${to}' --template https://raw.githubusercontent.com/release-it/release-it/master/templates/keepachangelog.hbs",
    "commitMessage": "(release): v${version}\n${changelog}",
    "requireCleanWorkingDir": true,
    "tag": false,
    "tagAnnotation": "v${version}",
    "tagName": "v${version}",
    "push": true,
    "skipChecks": true
  },
  "github": {
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --stdout --latest-version '${version}' --commit-limit false --template https://raw.githubusercontent.com/release-it/release-it/master/templates/keepachangelog.hbs"
  },
  "hooks": {
    "after:bump": "npx auto-changelog  --latest-version '${version}' --commit-limit false --template https://raw.githubusercontent.com/release-it/release-it/master/templates/keepachangelog.hbs",
    "after:release": "echo Successfully bumped release to v${version} for ${repo.repository}.",
    "before:init": "git fetch --prune --prune-tags origin"
  },
  "npm": false,
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    }
  }
}
